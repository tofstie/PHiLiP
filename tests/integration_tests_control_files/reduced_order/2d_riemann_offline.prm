# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 2
set run_type = integration_test
set pde_type = euler
set test_type = unsteady_reduced_order

# DG formulation
set use_weak_form = false
set use_split_form = true
set flux_nodes_type = GLL
set flux_reconstruction = cDG
set do_renumber_dofs = true # setting to false ruins everything ... 
# Note: this was added to turn off check_same_coords() -- has no other function when dim!=1
set use_periodic_bc = true

# numerical fluxes
set conv_num_flux = two_point_flux_with_lax_friedrichs_dissipation
set two_point_num_flux_type = CH

#subsection limiter
#  set bound_preserving_limiter = positivity_preservingZhang2010
#end

# ODE solver
subsection ODE solver
  set ode_output = verbose
  set print_iteration_modulo = 5
  set ode_solver_type = pod_galerkin_runge_kutta
  set runge_kutta_method = rk4_ex
  set output_solution_every_x_steps = 1
end

# freestream Mach number
# subsection euler
#  set mach_infinity = 0#=sqrt(2/1.4)
# end

subsection flow_solver
  set flow_case_type = riemann_problem
  set poly_degree = 1
  set final_time = 0.25
  set courant_friedrichs_lewy_number = 0.125
  set unsteady_data_table_filename = riemann_problem_time_table
  subsection grid
    set grid_left_bound = -1
    set grid_right_bound = 1
    set number_of_grid_elements_per_dimension = 32
  end
  set apply_initial_condition_method = interpolate_initial_condition_function
  #set output_restart_files = true
  #set output_restart_files_every_x_steps = 10
  ### for restarting
  set restart_computation_from_file = false
  #set restart_files_directory_name = /home/tyson/Codes/PHiLiP/build_release/
  #set restart_file_index = 8
end

# Reduced Order Model
subsection reduced order
    set output_snapshot_every_x_timesteps = 1
    set path_to_search = /home/tyson/Codes/PHiLiP/build_release
    set entropy_variables_in_snapshots = true
    set adaptation_tolerance = 0.000003
    set number_modes = 50
end
