# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 2
set run_type = integration_test
set pde_type = euler
set test_type = pod_unsteady

# DG formulation
set use_weak_form = false
set use_split_form = true
set flux_nodes_type = GLL
set flux_reconstruction = cDG

# Note: this was added to turn off check_same_coords() -- has no other function when dim!=1
set use_periodic_bc = true

# numerical fluxes
set conv_num_flux = two_point_flux
set two_point_num_flux_type = CH

# ODE solver
subsection ODE solver
  set ode_output = verbose
  set print_iteration_modulo = 5
  set ode_solver_type = pod_galerkin_rk_solver
  set runge_kutta_method = rk4_ex
  set output_solution_every_x_steps = 4
end

# freestream Mach number
subsection euler
  set mach_infinity = 1.195228609334 #=sqrt(2/1.4)
end

subsection linear solver
  set linear_solver_output = quiet
end

#subsection limiter
#  set bound_preserving_limiter = positivity_preservingZhang2010
#end

subsection flow_solver
  set flow_case_type = isentropic_vortex
  set poly_degree = 4
  set final_time = 2.366431913239 #=20 * sqrt(1.4), time for vortex to advect around the domain
  set courant_friedrichs_lewy_number = 0.1
  set unsteady_data_table_filename = isentropic_vortex_time_table
  subsection grid
    set grid_left_bound = -10.0
    set grid_right_bound = 10.0
    set number_of_grid_elements_per_dimension = 64
  end
  #set interpolate_initial_condition = true
end

# Reduced Order Model
subsection reduced order
  set output_snapshot_every_x_timesteps = 2
  set path_to_search = /home/tyson/Codes/PHiLiP/build_release
  set entropy_variables_in_snapshots = true
  set adaptation_tolerance = 0.000003
  set number_nodal_modes = 0
end