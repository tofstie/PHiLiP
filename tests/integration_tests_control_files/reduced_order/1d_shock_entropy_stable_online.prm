# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 1
set pde_type  = euler
set run_type = integration_test
set test_type = pod_unsteady

# DG formulation
set use_weak_form = false
set flux_nodes_type = GLL

# NSFR
set two_point_num_flux_type = CH
set use_split_form = true
set conv_num_flux = two_point_flux_with_lax_friedrichs_dissipation
set flux_reconstruction = cDG

# Euler
subsection euler
  set mach_infinity = 0.1
end


# Limiter
#subsection limiter
#  set use_tvb_limiter = true
#end

# Flow Solver
subsection flow_solver
    set flow_case_type = reflective_shock_tube
    set poly_degree = 2
    set final_time = 0.75
    set courant_friedrichs_lewy_number = 0.01
    subsection grid
        set grid_left_bound = 0
        set grid_right_bound = 1
        set number_of_grid_elements_per_dimension = 300
    end
end

# ODE solver
subsection ODE solver
  set ode_output = quiet
  set initial_time_step = 0.001
  set ode_solver_type = runge_kutta
  set output_solution_every_x_steps = 0
  set runge_kutta_method = rk4_ex
end

# Reduced Order Model
subsection reduced order
  set output_snapshot_every_x_timesteps = 10
end
