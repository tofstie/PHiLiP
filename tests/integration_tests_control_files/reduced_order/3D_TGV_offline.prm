# Listing of Parameters
# ---------------------

# Number of dimensions
set dimension = 3

# The PDE we want to solve.
set pde_type  = euler
set run_type = integration_test
set test_type = pod_unsteady

# DG formulation
set use_weak_form = false
set flux_nodes_type = GLL

# NSFR
set two_point_num_flux_type = CH
set use_split_form = true
set use_curvilinear_split_form = false

set flux_reconstruction = cDG
set use_periodic_bc = true

set enable_higher_order_vtk_output = true
# Euler
subsection euler
  set mach_infinity = 0.1
end

# Flow Solver
subsection flow_solver
    set flow_case_type = taylor_green_vortex
    set poly_degree = 1
    set final_time = 0.35
    set courant_friedrichs_lewy_number = 0.001
    set apply_initial_condition_method = project_initial_condition_function
    subsection grid
      set number_of_grid_elements_per_dimension = 8
    end
end

# ODE solver
subsection ODE solver
    set ode_output = verbose
    set nonlinear_max_iterations = 500
    set print_iteration_modulo = 100
    set ode_solver_type = pod_galerkin_rk_solver
    set initial_time_step = 0.001
    set output_solution_every_x_steps = 1
    set runge_kutta_method = rk4_ex
end

# Reduced Order Model
subsection reduced order
  set output_snapshot_every_x_timesteps = 1
  set path_to_search = /home/tyson/Codes/PHiLiP/build_release
  set entropy_varibles_in_snapshots = true
  set adaptation_tolerance = 0.000003
  set number_nodal_modes = 1500
end