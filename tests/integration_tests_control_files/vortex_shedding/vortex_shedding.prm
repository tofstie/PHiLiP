# Listing of Parameters
# ---------------------

# Number of dimensions
set dimension = 2
set test_type = vortex_shedding
set pde_type  = navier_stokes

# DG formulation
set use_weak_form = true

# numerical fluxes
set conv_num_flux = roe
set diss_num_flux = symm_internal_penalty
set use_inverse_mass_on_the_fly = true
#set overintegration = 2

set output_high_order_grid = true
set output_face_results_vtk = true
subsection ODE solver
  set ode_output = quiet
  set output_solution_every_x_steps = 1
  # Maximum nonlinear solver iterations
  set nonlinear_max_iterations            = 150
  # Nonlinear solver residual tolerance
  set nonlinear_steady_residual_tolerance = 1e-14
  set time_step_factor_residual_exp = 2
  set ode_solver_type  = implicit
  set initial_time_step = 1e3
  set time_step_factor_residual = 15.0
  set time_step_factor_residual_exp = 2

  #set ode_solver_type = runge_kutta
  #set runge_kutta_method = ssprk3_ex
end

subsection navier_stokes
  # Farfield Reynolds number
  set reynolds_number_inf = 100.0
end
subsection euler
  set mach_infinity = 0.2
end

subsection linear solver
  set linear_solver_output = quiet
  subsection gmres options
    set linear_residual_tolerance = 1e-12
    set max_iterations            = 2000
    set restart_number = 200

  end
  subsection JFNK options
    set newton_residual = 10.0
  end
end



subsection flow_solver
  set flow_case_type = naca0012
  set final_time = 150
  set poly_degree = 1
  set constant_time_step = 0.05
  #set courant_friedrichs_lewy_number = 0.005
  subsection grid
    set input_mesh_filename = /home/tyson/t1
    set use_gmsh_mesh = true
    set grid_degree = 2
  end
  subsection output_velocity_field
    set output_velocity_field_at_fixed_times = true
    set output_velocity_field_times_string = 1.0
    set output_vorticity_magnitude_field_in_addition_to_velocity = true
  end
 end

